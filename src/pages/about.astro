---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import FormattedTags from "../components/FormattedTags.astro";

const posts = (await getCollection("works")).sort(
    (b, a) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <main class="max-w-[54rem] mx-auto min-h-screen flex flex-col justify-center">
            <div class="flex flex-row">
                <img src="/images/mountain.jpg" alt="Mountain" class="w-1/2 shadow-emphasis" />

                <section class="mx-3">
                    <h1 class="text-4xl font-bold mb-4 mt-16">About</h1>
                    <p>Write up a story here. <br />Maybe add a filter/styling to the picture.</p>
                </section>
            </div>
        </main>

        <Footer />
    </body>
</html>
