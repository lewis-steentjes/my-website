---
const today = new Date();
import { Icon } from "astro-icon/components";
import SocialLinks from "./SocialLinks.astro";
---

<footer class="bg-secondary flex flex-col items-center gap-4">
    &copy; {today.getFullYear()}, Lewis Steentjes, All rights reserved.
    <SocialLinks />
</footer>
<style>
    footer {
        padding: 2em 1em 2em 1em;

        text-align: center;
    }
    .social-links {
        display: flex;
        justify-content: center;
        gap: 1em;
        margin-top: 1em;
    }
</style>
