---
interface Props {
    tags: String[];
}

const { tags } = Astro.props;
---

<p class="text-md mb-0 text-right text-balance text-inherit">
    {
        tags.map((tag, index) => {
            if (index == tags.length - 1) {
                return tag;
            }
            return tag + ", ";
        })
    }
</p>
